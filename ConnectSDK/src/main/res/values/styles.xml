<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AdminActivity" parent="Theme.Connect.Dialog">
        <item name="android:background">@color/connect_admin_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PinBox" parent="android:Widget.EditText">
        <item name="android:background">@drawable/pin_box_bg</item>
        <item name="android:textColor">@color/connect_admin_pin_box_txt</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:ems">2</item>
        <item name="android:maxLength">1</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="Theme.Connect.Dialog" parent="android:Theme.Dialog" />

    <style name="ZendeskConnectTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ZendeskConnectTheme.Text.Heading" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/zcn_ipm_primary_text_default</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ZendeskConnectTheme.Text.Message" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/zcn_ipm_secondary_text_default</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="ZendeskConnectTheme.Button.Colored" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/zcn_ipm_button_padding</item>
        <item name="android:paddingEnd">@dimen/zcn_ipm_button_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:background">@drawable/zcn_ipm_avatar_shape</item>
    </style>
</resources>